{
    "name": "malazan-maps",
    "version": "1.4.3",
    "author": "Johan <johan@malazanmaps.com>",
    "license": "MIT",
    "scripts": {
        "dev": "run-p serve js:watch css:watch",
        "serve": "eleventy --serve",
        "build": "cross-env NODE_ENV=production yarn build:all",
        "build:all": "yarn del www && yarn css:build && yarn js:build && eleventy",
        "css:watch": "tailwindcss -i src/css/main.css -o views/static/css/main-dist.css -w",
        "css:build": "yarn del views/static/css && tailwindcss -i src/css/main.css -o views/static/css/main-dist.css --minify",
        "js:build": "yarn del views/static/js && node esbuild.js prod",
        "js:watch": "node esbuild.js watch",
        "add-data": "node tools/add-data.mjs"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.1",
        "@sindresorhus/slugify": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "axios": "^0.27.2",
        "colors": "^1.4.0",
        "cross-env": "^7.0.3",
        "date-fns": "^2.28.0",
        "del-cli": "^4.0.1",
        "esbuild": "^0.14.38",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "fuse.js": "^6.5.3",
        "html-minifier": "^4.0.0",
        "node-html-parser": "^5.3.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.2",
        "prompts": "^2.4.2",
        "tailwindcss": "^3.0.24",
        "typescript": "^4.6.4"
    },
    "dependencies": {}
}
