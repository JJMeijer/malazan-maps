---
layout: base.njk
date: Last Modified

permalink: "continents/"

title: "Continents"
header: "Continents in the world of the Malazan Book of the Fallen series."

---
{% include "components/header.njk" %}

<div class="flex flex-col w-full items-center lg:bg-gray-100">
    <div class="h-96 bg-primary w-full"></div>
    <div class="flex flex-col items-center w-full -mt-[23rem] pb-4 bg-gray-100 rounded-lg text-gray-700 lg:w-3/4">
        {% for template in collections.continents %}
            <div class=" w-[95%] flex flex-col justify-center items-center mx-2 my-4 rounded-xl bg-white">
                <div class="flex flex-col items-center justify-center w-full md:w-3/4 2xl:w-1/2">
                    <p class="text-2xl font-bold py-4">{{ template.data.item.name }}</p>
                    <p class="text-center px-4 pb-4 italic">{{ template.data.item.description }}</p>
                </div>
                <div class="flex flex-row items-center w-full flex-wrap px-2 pt-4 pb-8">
                    {% for map in template.data.item.maps %}
                        <a
                            href="/map/{{ maps[map.id].slug }}/"
                            class="
                                flex
                                flex-row
                                items-center
                                w-full
                                py-2
                                pl-6
                                cursor-pointer
                                md:w-1/2
                                xl:w-1/3
                            "
                        >
                            <div class="h-12 w-12">
                                <img
                                    src="{{ maps[map.id].thumbnail }}"
                                    class="h-full w-full object-cover rounded-full"
                                    loading="lazy"
                                >
                            </div>
                            <p class="pl-2 text-lg underline decoration-1 underline-offset-2">{{ maps[map.id].name }}</p>
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% include 'components/footer.njk' %}
