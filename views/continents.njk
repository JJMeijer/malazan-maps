---
layout: base.njk
date: Last Modified

permalink: "continents/"

title: "Continents"
header: "Continents in the world of the Malazan Book of the Fallen series."

---
{% include "components/header.njk" %}

<div class="relative flex flex-col w-full items-center">
    <div class="h-96 bg-primary w-full"></div>
    <div class="bg-gray-50 w-full flex-grow"></div>
    <div
        class="
            absolute
            flex
            flex-col
            items-center
            w-full
            py-4
            bg-gray-50
            rounded-lg
            text-gray-700
            xl:w-3/4
        "
    >
        {% for template in collections.continents %}
            <div
                class="
                    w-[95%]
                    mx-2
                    my-8
                    flex
                    flex-col
                    min-h-[20rem]
                    shadow-lg
                    rounded-lg
                    bg-white
                    xl:flex-row
                "
            >
                <div class="flex flex-col items-center justify-center w-full xl:w-1/2">
                    <p class="text-2xl font-bold py-4">{{ template.data.item.name }}</p>
                    <p class="text-center px-4 italic">{{ template.data.item.description }}</p>
                </div>
                <div class="flex flex-row justify-center items-center w-full mx-8 flex-wrap p-2 xl:w-1/2">
                    {% for map in template.data.item.maps %}
                        <a
                            href="/map/{{ maps[map.id].name | slugify }}/"
                            class="
                                flex
                                flex-row
                                items-center
                                w-full
                                p-2
                                max-h-28
                                cursor-pointer
                                border-b
                                border-transparent
                                hover:border-primary
                                xl:w-1/2
                            "
                        >
                            <div class="h-16 w-16">
                                <img
                                    src="{{ maps[map.id].thumbnail }}"
                                    class="h-full w-full object-cover rounded-full"
                                    loading="lazy"
                                >
                            </div>
                            <p class="px-2 text-lg">{{ maps[map.id].name }}</p>
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% include 'components/footer.njk' %}
