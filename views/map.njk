---
layout: base.njk
date: Last Modified

pagination:
    data: maps
    size: 1
    alias: item
    addAllPagesToCollections: true

permalink: "map/{{ item.slug }}/"

eleventyComputed:
    title: "{{ item.name | safe }}"
    header: "{{ item.name | safe }}"
    description: "{{ item.description | safe }}"
---
{% import "components/navbar.njk" as navbar %}

<div class="flex flex-col flex-1 w-full bg-primary lg:flex-row">
    <div class="flex flex-col w-full items-center bg-primary lg:w-1/3 xl:w-1/4 lg:min-h-screen">
        {{ navbar.navbar(true) }}

        <div class="w-[85%] mb-8 mt-2">
            {% include 'components/search.njk' %}
        </div>

        <h1 class="py-2 px-2 text-2xl font-bold text-center">
            {{ title }}
        </h1>

        <div class="w-full">
            <p class="text-center pt-1 mb-4 px-6 text-lg">
                {{ description }}
            </p>
        </div>

        <div class="hidden mb-3 mt-auto lg:block">
            {% include 'components/footer.njk' %}
        </div>
    </div>

    <div
        class="
            z-30
            flex
            justify-center
            items-center
            flex-1
            w-full
            relative
            overflow-hidden
            bg-primary
            rounded-lg
            lg:w-2/3
            xl:w-3/4
            lg:max-h-screen
            lg:bg-white
            md:z-50
        "
    >
        <div
            class="
                relative
                flex
                rounded-md
                bg-white
                p-4
                cursor-grab
                origin-center
                transform
                scale-1
                translate-x-0
                translate-y-0
            "
            id="map-imagewrapper-1"
        >
            <img
                src="{{ item.image }}"
                class="object-contain lg:max-h-screen"
                id="map-image-1"
                alt="Map of {{ item.name }}"
                loading="lazy"
            >
        </div>
        <div
            class="hidden justify-center items-center bg-gray-800 opacity-80 absolute top-[5%] left-[90%] w-10 h-10 lg:w-16 lg:h-16 p-1 cursor-pointer rounded-full shadow-lg hover:bg-primary hover:opacity-100"
            id="reset-zoom-button">
            <img
                src="/static/img/reset-zoom.webp"
                class="object-contain w-3/4"
                alt="Reset Zoom Button"
                title="Reset Zoom Button"
            >
        </div>
    </div>
</div>

<div class="lg:hidden w-full">
    {% include 'components/footer.njk' %}
</div>
