---
layout: base.njk
date: Last Modified

pagination:
    data: maps
    size: 1
    alias: item
    addAllPagesToCollections: true

permalink: "map/{{ item.slug }}/"

eleventyComputed:
    title: "{{ item.name | safe }}"
    header: "{{ item.name | safe }}"
    description: "{{ item.description | safe }}"
---
{% import "components/navbar.njk" as navbar %}

<div class="flex flex-col flex-1 w-full bg-primary lg:flex-row">
    <div class="flex flex-col w-full items-center bg-primary lg:w-1/3 xl:w-1/4 lg:min-h-screen">
        {{ navbar.navbar(true, title) }}

        <div class="w-[85%] mb-8 mt-2">
            {% include 'components/search.njk' %}
        </div>

        <h1 class="py-2 px-4 text-2xl font-bold text-center">
            {{ title }}
        </h1>

        <div class="w-full">
            <p class="text-center pt-1 mb-4 px-6 text-lg">
                {{ description }}
            </p>
        </div>

        <div class="hidden mb-3 mt-auto lg:block">
            {% include 'components/footer.njk' %}
        </div>
    </div>

    <div class=" z-30 flex justify-center items-center flex-1 w-full relative rounded-lg overflow-hidden lg:w-2/3 xl:w-3/4 lg:max-h-screen bg-gray-100 md:z-50 md:bg-white">
        <div id="map-imagewrapper-1" class="relative flex bg-white p-4 cursor-grab origin-center transform scale-1 translate-x-0 translate-y-0">
            <img
                src="{{ item.image }}"
                class="map-image object-contain lg:max-h-screen"
                alt="Map of {{ item.name }}"
            >
        </div>
        <div id="reset-zoom-button" class="hidden justify-center items-center bg-gray-800 opacity-80 absolute top-[5%] left-[90%] w-10 h-10 lg:w-16 lg:h-16 p-1 cursor-pointer rounded-full shadow-lg hover:bg-primary hover:opacity-100">
            <img
                src="/static/img/reset-zoom.webp"
                class="object-contain w-3/4"
                alt="Reset Zoom Button"
                title="Reset Zoom Button"
            >
        </div>
    </div>
</div>

<div class="lg:hidden w-full">
    {% include 'components/footer.njk' %}
</div>
