{
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    },
    "ignorePatterns": [
        "static/js/*.js"
    ],
    "overrides": [
        {
            "files": ["*.ts"],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "@typescript-eslint"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended",
                "prettier"
            ],
            "rules": {
                //"@typescript-eslint/no-unused-vars": ["off"]
            }
        }
    ]
}
